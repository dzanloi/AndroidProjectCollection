<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calculator"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/buttonsnumbers"
        android:orientation="vertical"
        android:background="#12130F"
        android:padding="16dp">

        <TextView
            android:layout_margin="16dp"
            android:id="@+id/txtView_solution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="40dp"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:layout_above="@id/txtView_result"></TextView>

        <TextView
            android:layout_margin="16dp"
            android:id="@+id/txtView_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle=""
            android:textSize="64dp"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:layout_above="@id/buttonsnumbers"></TextView>

        <!--ahhaha?-->
        <!--        FIST LAYER (C % BACK DIVIDE)-->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:columnCount="4"
            android:rowCount="5">

            <Button
                android:id="@+id/button_clear"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:backgroundTint="#AEAEAE"
                android:text="C"
                android:textColor="@color/black"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_modulo"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:backgroundTint="#AEAEAE"
                android:text="%"
                android:textColor="@color/black"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_erase"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:backgroundTint="#AEAEAE"
                android:text="⌫"
                android:textColor="@color/black"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_divide"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:backgroundTint="#FF9800"
                android:text="÷"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="40dp" />
            <!--SECOND LAYER (7,8, 9, X)-->
            <Button
                android:id="@+id/button_7"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:backgroundTint="#454545"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_8"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:backgroundTint="#454545"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_9"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:backgroundTint="#454545"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_multpily"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:backgroundTint="#FF9800"
                android:text="×"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="40dp" />
            <!--THIRD LAYER (4,5,6,+)-->
            <Button
                android:id="@+id/button_4"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:backgroundTint="#454545"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_5"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:backgroundTint="#454545"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_6"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:backgroundTint="#454545"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_plus"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:backgroundTint="#FF9800"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="40dp" />
            <!--FOURTH LAYER(1,2,3,-)-->
            <Button
                android:id="@+id/button_1"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:backgroundTint="#454545"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_2"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:backgroundTint="#454545"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_3"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:backgroundTint="#454545"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_minus"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:backgroundTint="#FF9800"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="40dp" />
            <!--LAST LAYER (0, ., =)-->
            <Button
                android:id="@+id/button_0"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:backgroundTint="#454545"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_dot"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:backgroundTint="#454545"
                android:text="."
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button_equals"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="178dp"
                android:layout_height="80dp"
                android:layout_columnSpan="2"
                android:layout_margin="8dp"
                android:backgroundTint="#FF9800"
                android:text="="
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="40dp" />
        </GridLayout>


    </LinearLayout>

</RelativeLayout>